{% block body %}
<div id="nav-button">
	<svg version="1.1" id="calque-nav" fill="#333" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
	viewBox="0 0 611 611" style="enable-background:new 0 0 611 611;" xml:space="preserve">
	<rect id="rect-one" x="-0.4" y="404.5" width="611.3" height="98.5" transform="matrix(1.00000000, 0.00000000, 0.00000000, 1.00000000, 0, 0)"/>
	<rect id="rect-two" x="-0.4" y="109" width="611.3" height="98.5"/>
</svg>
</div>
<nav>
	<div class="nav-container">
		<div class="nav-vertical">
			<h2>hello.</h2>
			<blockquote class="erased">Souvenirs de Route</blockquote>
			<blockquote class="erased">Pendant mes voyages, j'ajoute une nouvelle photo tous les jours, pour garder en souvenir ces moments déjà passés.</blockquote>
			<blockquote class="erased">{{ countpics }} photos sur le site.</blockquote>
			<div class="social">
				<div class="link-container"><div class="sep"></div><a href="https://www.youtube.com/channel/UCbFB4IHyLqwcz_VVKAaJbaw/videos" target="_blank">Youtube</a></div>
				<div class="link-container"><div class="sep"></div><a href="https://jdecalle.fr/" target="_blank">Blog</a></div>
				<div class="link-container"><div class="sep"></div><a href="https://www.instagram.com/insta_rimka/" target="_blank">Instagram</a></div>
			</div>
		</div>
		<div class="website">
			<a href="http://www.karimmorel.fr" target="_blank">karimmorel.fr</a>
		</div>
	</div>
</nav>
<div id="content">
	<div id="searchbar">
		<a id="home-link" href="{{ path('home') }}"><i class="fa fa-home"></i></a>
		{% if search is defined %}
		{{ render(controller('AppBundle:searchBar:renderSearchBar', {'search' : search})) }}
		{% else %}
		{{ render(controller('AppBundle:searchBar:renderSearchBar')) }}
		{% endif %}
	</div>
	{% if pics is empty %}
		<h2>Aucun Résultat..</h2>
	{% else %}
	{% for pic in pics %}
	<div class="container">
		<div class="shadow-div">
			<div class="plus">
				<div class="plus-span-container">
					<span>
						+
					</span>
				</div>
				<div class="text-container">
					<h1>{{ pic.name }}</h1>
					<div class="sep"></div>
					<p>{{ pic.description }}</p>
					<blockquote>{{ pic.region }} - {{ pic.picdate|date('Y') }}</blockquote>
					<span class="signature">{{ pic.theme | lower}}_</span>
				</div>
			</div>
			{% if pic.type|split('.')|last == 'jpeg' or pic.type|split('.')|last == 'png' %}
			<img src="{{ asset('uploads/non_publiee/' ~ pic.type) }}" alt="{{ pic.shortname }}"/>
			{% elseif  pic.type|split('.')|last == 'mp4' or pic.type|split('.')|last == 'gif' %}
			<video controls autoplay>
				<source src="{{ asset('uploads/non_publiee/' ~ pic.type) }}" type="video/mp4">
				</video>
				{% endif %}
			</div>
		</div>
		{% endfor %}
		{% endif %}
	</div>
	{% if not search is defined %}
	<div class="loader-container">
		<div class="loader">
			+
		</div>
	</div>
	{% endif %}
	{% endblock %}
